@model IEnumerable<FeroTech.Infrastructure.Application.DTOs.MemberDto>

@{
    ViewData["Title"] = "Member List";
}

<h2 class="text-center mb-4">Library Members</h2>

<div class="d-flex justify-content-between mb-3">
    <h4>Member Records</h4>
    <a asp-action="Create" class="btn btn-success">+ Add New Member</a>
</div>

<table class="table table-striped table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Member Name</th>
            <th>Address</th>
            <th>Member Type</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Join Date</th>
            <th>Expiry Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var member in Model)
            {
                <tr>
                    <td>@member.MemberName</td>
                    <td>@member.Address</td>
                    <td>@member.MemberType</td>
                    <td>@member.PhoneNumber</td>
                    <td>@member.Email</td>
                    <td>@member.JoinDate.ToString("yyyy-MM-dd")</td>
                    <td>@member.ExpiryDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (member.Status?.ToLower() == "active")
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@member.MemberId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@member.MemberId" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@member.MemberId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-muted text-center">No members found.</td>
            </tr>
        }
    </tbody>
</table>
