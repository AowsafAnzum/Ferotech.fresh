@model FeroTech.Infrastructure.Application.DTOs.FineDto

@{
    ViewData["Title"] = "Delete Fine";
}

<h2 class="text-center mb-4 text-danger">Delete Fine</h2>

<div class="alert alert-warning text-center">
    <strong>Are you sure you want to delete this fine record?</strong>
</div>

<div class="card mx-auto p-3" style="max-width:700px;">
    <dl class="row">
        <dt class="col-sm-4">Fine ID</dt>
        <dd class="col-sm-8">@Model.FineId</dd>

        <dt class="col-sm-4">Member ID</dt>
        <dd class="col-sm-8">@Model.MemberId</dd>

        <dt class="col-sm-4">Issue ID</dt>
        <dd class="col-sm-8">@Model.IssueId</dd>

        <dt class="col-sm-4">Amount</dt>
        <dd class="col-sm-8">@Model.FineAmount</dd>

        <dt class="col-sm-4">Fine Date</dt>
        <dd class="col-sm-8">@Model.FineDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-4">Payment Status</dt>
        <dd class="col-sm-8">@Model.PaymentStatus</dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-3">
        <input asp-for="FineId" type="hidden" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-danger">Yes, delete</button>
        </div>
    </form>
</div>
