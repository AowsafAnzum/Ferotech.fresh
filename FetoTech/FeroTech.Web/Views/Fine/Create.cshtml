@model FeroTech.Infrastructure.Application.DTOs.FineDto

@{
    ViewData["Title"] = "Create Fine";
}

<h2 class="mb-3">Create Fine</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="MemberId" class="form-label"></label>
        <input asp-for="MemberId" class="form-control" />
        <span asp-validation-for="MemberId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IssueId" class="form-label"></label>
        <input asp-for="IssueId" class="form-control" />
        <span asp-validation-for="IssueId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="FineAmount" class="form-label"></label>
        <input asp-for="FineAmount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="FineAmount" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="FineDate" class="form-label"></label>
        <input asp-for="FineDate" class="form-control" type="date" />
        <span asp-validation-for="FineDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PaymentStatus" class="form-label"></label>
        <select asp-for="PaymentStatus" class="form-control">
            <option value="">-- Select Payment Status --</option>
            <option value="Paid">Paid</option>
            <option value="Unpaid">Unpaid</option>
        </select>
        <span asp-validation-for="PaymentStatus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
